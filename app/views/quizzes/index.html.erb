<p id="notice"><%= notice %></p>

<h1>Listing Quizzes</h1>


<ul class="w3-ul w3-hoverable">
  <% @quizzes.each do |quiz| %>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.code %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.name %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.description %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.displaydescription %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.open %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.close %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.timelimit %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.whentimeexpires %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.submissiongraceperiod %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.gradecategory %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.attemptsallowed %></span> </p>
      </li>
          <li class="w3-border"> 
        <p> <span class="w3-tag w3-blue"><%= quiz.gradingmethod %></span> </p>
      </li>
      <% end %>  
</ul>


